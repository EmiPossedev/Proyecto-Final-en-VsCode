{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Compilar con MinGW",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-Wall",
        "-Wextra",
        "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compilaci√≥n manual con MinGW"
    }
  ]
}